#include "led_callaback.h"

#define LED_OFF  		HAL_GPIO_WritePin(LED_GPIO_Port, LED_Pin, 0);
#define LED_ON 			HAL_GPIO_WritePin(LED_GPIO_Port, LED_Pin, 1);


// Инициализация светодиода
void init_led(GPIO_TypeDef* port, uint16_t pin)
{
    GPIO_InitTypeDef GPIO_InitStruct = {0};

    HAL_GPIO_WritePin(port, pin, GPIO_PIN_RESET);

    GPIO_InitStruct.Pin = pin;
    GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
    GPIO_InitStruct.Pull = GPIO_NOPULL;
    GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;

    HAL_GPIO_Init(port, &GPIO_InitStruct);

}

// Обработчик прерываний кнопки
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
	if(BUT1_Pin == GPIO_Pin){
		__NOP();
		LED_ON;
		HAL_Delay(500);
		LED_OFF;
	}
}
